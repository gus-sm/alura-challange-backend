
<%- include('./templates/header.ejs'); %>

  <div class="d-flex justify-content-center mt-5 row">
    <form action = "/usuarios/<%=user._id%>" method = "post">

      <div class="row mb-3">
        <label class="mr-2">Nome</label>
        <input type="text" value = "<%=user.name%>" name="name">
      </div>

      <div class="row mb-3">
        <label class="mr-2">E-mail</label>
        <input type="text" value = "<%=user.email%>" name="email">
      </div>

      <button type="submit" class="btn btn-primary">Salvar alterações</button>
      <a href="/usuarios" class="btn btn-secondary">Voltar</a>
    </form>
    
  </div>

    
  <div class="d-flex justify-content-center mt-5 row">
    <% if (locals.error && locals.message){ %> 
      <p class="text-danger"><%=message%></p>

    <% } %>
    <% if (!locals.error && locals.message) { %>
      <p class="text-primary"><%=message%></p>
    <% }%>
  </div>

</body>
</html>